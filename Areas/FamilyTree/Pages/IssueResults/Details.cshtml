@page
@model FamilyTreeServices.Pages.IssueResults.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Issue</h4>
    <hr />
    <div>
        @if (Model.Profile1.Url != null)
        {
            <a href="@Html.DisplayFor(model => model.Profile1.Url)">
                @Html.DisplayFor(model => model.Profile1.Name)
            </a>
        }
        else
        {
            @Html.DisplayFor(model => model.Profile1.Name)
        }
        @Html.DisplayFor(model => model.Profile1.Birth) - @Html.DisplayFor(model => model.Profile1.Death)
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Issue.Type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Issue.Type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Issue.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Issue.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Issue.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Issue.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Issue.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
